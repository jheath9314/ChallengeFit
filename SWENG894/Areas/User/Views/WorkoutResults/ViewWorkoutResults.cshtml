@model IEnumerable<SWENG894.Models.WorkoutResult>

@{
    ViewData["Title"] = "View Workout Results";
}

<h1>Index</h1>
@if (Model.ToArray().Length == 0)
{
    <h4>No results found for workout</h4>
}
else if (!Model.Any())
{
    <h4>Workout Name: @Model.First().WorkoutName</h4>


    <table class="table">
        <thead>
            <tr>
                <th>
                    Athlete Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Score)
                </th>
                <th>
                    Result Notes
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>
                    <td>
                        @item.getTimeDisplayString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResultNotes)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
