@model SWENG894.Models.Workout

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Workout</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Reps/Time
        </dt>
        <dd class="col-sm-10">
            @Model.getTimeDisplayString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScoringType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScoringType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScalingOptions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScalingOptions)
        </dd>
        @foreach (var ex in Model.Exercises)
        {
            <dt class="col-sm-2">
                @Html.DisplayFor(model => ex.Exer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => ex.Reps)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-area="User" asp-controller="Exercises" asp-action="Create" asp-route-id="@Model.Id">Add Exercise</a> |
    <a asp-area="User" asp-controller="WorkoutResults" asp-action="Create" asp-route-id="@Model.Id">Record Results</a> |
    <a asp-action="Index">Back to List</a>
</div>
